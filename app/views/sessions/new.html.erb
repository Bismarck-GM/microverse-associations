<div class="row center-xs middle-xs mt-5">
  <div class="col-md-6 col-sm-8 col-xs-12">
    <div class="row start-xs">
      <div class="window w-100">
        <div class="title-bar">
          <div class="title-bar-text">Sup?</div>
        </div>
        <div class="window-body">
          <h4>Welcome back yo</h4>
          <%= form_for @user, url: sessions_path do |f| %>
            <div class="field-row">
              <%= f.label :username %>
              <%= f.text_field :name %>
            </div>
            <div class="flex justify-end">
              <button>Login</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'partials/home_link' %>
