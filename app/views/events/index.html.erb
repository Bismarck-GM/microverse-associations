<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>

<h3> Upcoming Events </h3>
<%= render @upcoming_events %>

<h3> Past events </h3>
<%= render @prev_events %>

<%= form_for @event, url: events_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.submit "Create Event" %>
<% end %>